# .alias

# Set shortcut for opening .zshrc file
alias zshconfig="editor ~/.zshrc"

# Set tmux to support 256 color as default
alias tmux="tmux -2"
# Set weechat to use curses mode as default
alias weechat="weechat-curses"

# Convert JSON to pretty-print JSON
alias prettyjson="python -m json.tool"

alias ls='ls -GpF --color=auto'

# Use nvim instead of vim
alias vim="nvim"

